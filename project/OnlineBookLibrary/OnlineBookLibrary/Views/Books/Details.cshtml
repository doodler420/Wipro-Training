@model OnlineBookLibrary.Models.Book
@{

    ViewData["Title"] = "Details";

}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-gradient-primary text-white rounded-top-4">
                    <h3 class="mb-0">
                        <i class="bi bi-book"></i> Book Details
                    </h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fs-6 fw-semibold">
                            @Html.DisplayNameFor(m => m.Title)
                        </dt>
                        <dd class="col-sm-8 fs-5 fw-semibold">
                            @Html.DisplayFor(m => m.Title)
                        </dd>
                        <dt class="col-sm-4 text-muted fs-6 fw-semibold">
                            @Html.DisplayNameFor(m => m.Author)
                        </dt>
                        <dd class="col-sm-8 fs-5">
                            @Html.DisplayFor(m => m.Author)
                        </dd>
                        <dt class="col-sm-4 text-muted fs-6 fw-semibold">
                            @Html.DisplayNameFor(m => m.Genre)
                        </dt>
                        <dd class="col-sm-8 fs-5">
                            @Html.DisplayFor(m => m.Genre)
                        </dd>
                        <dt class="col-sm-4 text-muted fs-6 fw-semibold">
                            @Html.DisplayNameFor(m => m.PublishedYear)
                        </dt>
                        <dd class="col-sm-8 fs-5">
                            @Html.DisplayFor(m => m.PublishedYear)
                        </dd>
                        <dt class="col-sm-4 text-muted fs-6 fw-semibold">
                            @Html.DisplayNameFor(m => m.IsAvailable)
                        </dt>
                        <dd class="col-sm-8 fs-5">
                            @if (Model.IsAvailable)
                            {
                                <span class="text-success fs-4 fw-bold" title="Available">&#10003;</span> <!-- green checkmark -->
                            }
                            else
                            {
                                <span class="text-danger fs-4 fw-bold" title="Not Available">&#10007;</span> <!-- red cross -->
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-white d-flex justify-content-between rounded-bottom-4 flex-wrap gap-2">
                    <a asp-action="Create" class="btn btn-success px-4">
                        <i class="bi bi-plus-lg"></i> Create New
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info px-4">
                        <i class="bi bi-info-circle"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>